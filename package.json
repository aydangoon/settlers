{
  "name": "settlers",
  "version": "1.0.0",
  "description": "Core logic for a settlers game instance.",
  "repository": {
    "type": "git",
    "url": "https://github.com/aydangoon/settlers.git"
  },
  "main": "./dist/settlers.js",
  "types": "./dist/settlers.d.ts",
  "scripts": {
    "cli": "node ./build/src/cli.js",
